<resources>
    <style name="CarbonTheme" parent="@style/AppTheme">
        <item name="listContentHeader">?android:attr/listSeparatorTextViewStyle</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarStyle">@style/BackupActionBar</item>
        <item name="listHeaderTextColor">@android:color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/BackupOverFlow</item>
    </style>

    <style name="BackupActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_green</item>
        <item name="android:titleTextStyle">@style/BackupActionBarTitleText</item>
    </style>

    <style name="BackupActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BackupOverFlow">
        <item name="android:src">@drawable/ic_action_core_overflow</item>
    </style>

    <style name="BackupRestoreTheme" parent="@style/CarbonTheme">
        <item name="iconSize">@android:dimen/app_icon_size</item>
    </style>
</resources>