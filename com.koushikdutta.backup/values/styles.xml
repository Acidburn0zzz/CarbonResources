<resources>
    <style name="CarbonTheme" parent="@style/AppTheme">
        <item name="listContentHeader">?android:attr/listSeparatorTextViewStyle</item>

        <item name="android:actionBarStyle">@style/BackupActionBar</item>
        <item name="listHeaderTextColor">@android:color/black</item>
    </style>

    <style name="BackupActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_blue</item>
    </style>

    <style name="BackupOverFlow">
        <item name="android:src">@drawable/ic_action_core_overflow</item>
    </style>

    <style name="BackupRestoreTheme" parent="@style/CarbonTheme">
        <item name="iconSize">@android:dimen/app_icon_size</item>
    </style>
</resources>